<div class="row">
  <div class="col-xs-12">
    <div class="page-header">
      <h1>Users</h1>
    </div>

    <%= form_for(:search, url: admin_users_path, method: :get) do |f| %>
      <%= f.text_field :search_term, class: 'form-control' %>
      <%= f.submit :Search, class: 'btn btn-primary' %>
    <% end %>

    <table class="table table-striped table-hover">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Since</th>
        <th>Action</th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at %></td>
        <td><%= link_to 'View', admin_user_path(user) %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>