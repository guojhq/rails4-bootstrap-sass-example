<div class="row">
  <div class="col-xs-3">
    <%= image_tag(@user.profile.avatar.thumb.url, class: 'img-thumbnail') if @user.profile.avatar? %>
  </div>
  <div class="col-xs-9">
    <h1><%= @user.name %><small> <%= @user.profile.location %></h1>
    <p>Born <%= @user.profile.birthdate %></p>
  </div>
</div>