<div class="row">
  <div class="col-xs-12">

    <div class="page-header">
      <h1>Update Profile</h1>
    </div>

    <% if @user.errors.any? %>
      <% @user.errors.full_messages.each do |error| %>
        <div class="alert alert-danger">
          <%= error %>
        </div>
      <% end %>
    <% end %>

    <%= form_for(@user, url: admin_user_path(current_user), method: :put, :html => {:multipart => true}) do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: 'form-control' %>
      </div>

      <%= f.fields_for :profile do |p| %>

        <div class="form-group">
          <%= p.label :location %>
          <%= p.text_field :location, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= p.label :birthdate %>
          <%= p.text_field :birthdate, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= p.label :avatar %>
          <%= p.file_field :avatar, class: 'form-control' %>
        </div>

      <% end %>

      <div class="form-group">
        <p><i>Fill in the fields below to change your password.</i></p>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.text_field :password, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.text_field :password_confirmation, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>